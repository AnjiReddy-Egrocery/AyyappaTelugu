<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title with a close icon on the right side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nearby Temples"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start"
            android:paddingEnd="8dp" />

        <!-- Close icon on the right side -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/rb_5km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 km" />

        <RadioButton
            android:id="@+id/rb_10km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="10 km"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_20km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 km" />
    </RadioGroup>


    <!-- RecyclerView to display the nearby temples -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_nearest_temples"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp" />
</LinearLayout>