<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title with a close icon on the right side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="అయ్యప్ప క్యాలెండర్ సమాచారం"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingEnd="8dp" />

        <!-- Close icon on the right side -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="అయ్యప్ప స్వామి భక్తులు ప్రతి సంవత్సరం ప్రత్యేక పూజలు, దీక్షలు, మాండలిక వేళలు పాటిస్తూ అయ్యప్ప స్వామిని పూజిస్తారు. ఈ క్యాలెండర్ ముఖ్యమైన అయ్యప్ప పూజా రోజులను, వ్రతాలు, దీక్ష ప్రారంభ తేదీలను అందిస్తుంది."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="మాండల పూజ ప్రారంభం: 2024 నవంబర్ 16"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="మండల దీక్ష ముగింపు (మండల పూజ): 2024 డిసెంబర్ 26"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="మకరజ్యోతి, మకర సంక్రాంతి పూజ: 2025 జనవరి 14"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="శబరిమల ఆలయం తెరవబడే తేదీ: 2024 నవంబర్ 16"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="శబరిమల ఆలయం మూసే తేదీ: 2025 జనవరి 20"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="మాండలిక కాలం &amp; ముఖ్య పూజలు"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>

    </LinearLayout>


</LinearLayout>