<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title with a close icon on the right side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ఉత్పత్తుల సమాచారం"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingEnd="8dp" />

        <!-- Close icon on the right side -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="భక్తుల కోసం మార్కెట్లో ఎన్నో అయ్యప్ప స్వామి సంబంధిత ఉత్పత్తులు లభిస్తున్నాయి. అవి పూజా సామగ్రి నుండి ధార్మిక వస్త్రధారణ వరకు విభిన్న రకాలుగా ఉంటాయి."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="అయ్యప్ప స్వామి విగ్రహాలు – పూజకు ఉపయోగపడే విభిన్న పరిమాణాల్లో లభించే విగ్రహాలు."
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="అభిషేక ద్రవ్యాలు – శుద్ధ నెయ్యి, చందనం, పసుపు, కుంకుమ, పంచామృతం, తులసీ దళాలు."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="వ్రత దీపాలు &amp; అర్చన కిట్ – స్వామి పూజకు అవసరమైన అన్ని వస్తువులు కలిగి ఉండే కిట్."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="పట్టుదుప్పట్లు &amp; పంచలు – ఆలయ దర్శనం లేదా ప్రత్యేక పూజలకు ధరించేందుకు."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" కలువమణి (కాలువ బట్టలు) – అయ్యప్ప మాలధారణ చేసిన భక్తులు ధరించే నల్లని వస్త్రాలు."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="అయ్యప్ప బాద్యతలు (Bag &amp; Belt) – అయ్యప్ప యాత్రికులు ఉపయోగించే పూజా సామగ్రి బ్యాగ్ &amp; నడుము బెల్ట్."
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#000"/>

    </LinearLayout>


</LinearLayout>