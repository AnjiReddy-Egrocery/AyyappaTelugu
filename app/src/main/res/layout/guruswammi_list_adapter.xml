<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_card_background"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_guruswami_adapter">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="15dp">

                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="16dp"
                        android:text="Name"
                        android:singleLine="true"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16dp"
                        android:text=":"
                        android:singleLine="true"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="-100dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_name"
                        android:textSize="16dp"
                        android:text="Title"
                        android:singleLine="true"
                        android:textColor="#FFF"
                        android:layout_marginLeft="-85dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <TextView
                    android:textSize="16dp"
                    android:text="Location"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_below="@+id/img"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"/>
                    <TextView
                        android:textSize="16dp"
                        android:text=":"
                        android:singleLine="false"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_below="@+id/img"
                        android:textColor="#FFF"
                        android:layout_marginLeft="-100dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/txt_address"
                        android:textSize="16dp"
                        android:text="address"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:layout_below="@+id/img"
                        android:textColor="#FFF"
                        android:layout_marginLeft="-85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="16dp"
                        android:text="Mobile No"
                        android:singleLine="false"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_below="@+id/img"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"/>
                    <TextView
                        android:textSize="16dp"
                        android:text=":"
                        android:singleLine="false"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_below="@+id/img"
                        android:textColor="#FFF"
                        android:layout_marginLeft="-100dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/txt_mobilenum"
                        android:textSize="16dp"
                        android:text="Mobile Num"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:layout_below="@+id/img"
                        android:textColor="#FFF"
                        android:layout_marginLeft="-85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"/>
                </LinearLayout>
               <!-- <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" మరింత సమాచారం "
                    android:id="@+id/but_mostpopular"
                    android:textColor="#FFF"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="14dp"

                    android:backgroundTint="#AC9F85"
                    android:textStyle="normal"/>
-->
            </LinearLayout>

    </LinearLayout>
</LinearLayout>