<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The row background color (black in this example) -->
    <solid android:color="#000000" />

    <!-- A white stroke around the row -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Padding so the text inside the row isn't flush against the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>